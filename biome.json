{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"indentWidth": 2,
			"semicolons": "always",
			"quoteStyle": "single",
			"trailingCommas": "none"
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["dist", ".astro"]
	}
}
