{
	"name": "root",
	"private": true,
	"packageManager": "pnpm@9.12.3",
	"engines": {
		"node": ">=18.20.3"
	},
	"scripts": {
		"changeset": "changeset",
		"dev": "turbo run dev",
		"build": "turbo run build",
		"format": "biome format --write",
		"lint": "biome check .",
		"lint:fix": "biome check --apply .",
		"package:astro": "pnpm --filter pipecms-astro dev",
		"playground:dev": "pnpm --filter playground dev"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.27.9",
		"husky": "^9.1.6",
		"turbo": "^2.2.3"
	}
}
